<p id="notice"><%= notice %></p>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @words.each do |word| %>
      <tr>  
        <td><%= word.id %></td>
        <td><%= word.title %></td>
        <td><%= word.body %></td>
        <td><%= word.user_id %></td>
        <td><%= link_to 'Show', user_word_path(word.user_id, word) %></td>
        <td><%= link_to 'Edit', edit_user_word_path(word.user_id, word ) %></td>
        <td><%= link_to 'Destroy', user_word_path(word.user_id, word), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_user_word_path(@user) %>
